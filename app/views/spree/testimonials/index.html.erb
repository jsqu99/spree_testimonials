<h1><%= Spree.t("testimonials.testimonials") %></h1>

<% if @testimonials.blank? %>
  <%= Spree.t("testimonials.no_testimonials") %>
<% else %>
  <%= paginate(@testimonials) %>
	<div class="testimonial-listing">
		<% @testimonials.each do |testimonial| %>
			<div class="testimonial">
				<div class="testimonial-name">
					<%= testimonial.name %>
				</div>
        <div class="testimonial-title">
          <%= testimonial.title %>
        </div>
				<div class="testimonial-body">
					<%= testimonial.body %>
				</div>
			</div>
		<% end %>
	</div>
  <%= paginate @testimonials %>
<% end %>

<div class="testimonial-form">
  <%= render "new" %>
</div>
